<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registro</title>
  <link rel="stylesheet" href="/css/registro.css">
  <link href='https://cdn.boxicons.com/fonts/basic/boxicons.min.css' rel='stylesheet'>
</head>
<body>
  <!-- Titulo y Logo -->
  <div class="seek-icon">
    <a href="/home">
      <h1>Seek</h1>
    </a>
    <i class='bx  bx-circle-outer-dashed-circle'  style='color:#ffffff'></i> 
  </div>

  <!-- Contenedor de registro -->
  <div class="box-registro">
    <h2>Registro</h2>
    <form action="/register" method="POST">
      <div class="input-container">
        <input type="text" name="username" id="username" placeholder="" required>
        <label for="username">Nombres</label>
      </div>

      <div class="input-container">
        <input type="text" name="apellidos" id="apellidos" placeholder="" required>
        <label for="apellidos">Apellidos</label>
      </div>

      <div class="input-container">
        <input type="text" name="correo" id="correo" placeholder="" required>
        <label for="correo">Correo</label>
      </div>

      <div class="input-container">
        <input type="password" name="password" id="password" placeholder="••••••••" required>
        <label for="password">Contraseña</label>
      </div>

      <button type="submit">Registrarse</button>
    </form>
  </div>
  
  <!-- Boton Iniciar sesion -->
  <div class="box-backlogin">
    <p>¿Ya tienes cuenta?</p>
    <a href="/login">
      <button>Iniciar sesión</button>
    </a>
  </div>
</body>
</html>
